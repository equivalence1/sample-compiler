fun fac(int n): int begin
    if n < 2
    then
        return 1
    else
        return n * fac(n - 1)
    fi
end

fun pow(int x, int n): int begin
    int i;
    int res;

    i := 0;
    res := 1;
    while i < n do
        res := res * x;
        i := i + 1
    od;
    return res
end

fun fib(int n): int begin
    int i;
    int a0;
    int a1;

    i  := 0;
    a0 := 0;
    a1 := 1;
    while i < n do
        a1 := a1 + a0;
        a0 := a1 - a0;
        i := i + 1
    od;
    return a0
end

